{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/.source": ["./.source/server.ts"],
      "@/ui": ["./src/components/ui"],
      "@/utils": ["./src/utils"],
      "@/lib": ["./src/utils/lib"],
      "@/mdx-components": ["./mdx-components.tsx"],
      "fumadocs-mdx:collections": [".source/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
