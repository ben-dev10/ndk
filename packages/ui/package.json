{
  "name": "@_ndk/ui",
  "version": "0.0.2",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./styles": "./dist/styles.css",
    "./tokens": "./src/styles/tokens.css",
    "./themes/*": "./src/utils/styles/themes/*",
    "./fonts": "./src/utils/styles/fonts/fonts.css",
    "./typography": "./src/utils/styles/typography.css",

    "./next-fonts": "./src/utils/styles/fonts/fonts.ts",

    "./utils.ts": "./src/utils/lib/utils.ts",
    "./utils/*": "./src/utils/*",
    "./lib/*": "./src/utils/lib/*.ts",
    
    "./components/*": {
      "import": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    },
    "./icons/*": "./src/icons/*.tsx",
    "./contexts/*": "./src/contexts/*.tsx",
    "./hooks/*": "./src/hooks/*.ts"
  },
  "scripts": {
    "build:types": "tsc",
    "build:components": "tsc",
    "build": "npm run build:styles && npm run build:types",
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",

    "dev": "npm run dev:styles",
    "dev:ui": "npm run dev:styles",
    "dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --watch",
    "dev:components": "tsc --watch",
    
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component"
  },
  "peerDependencies":{
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.17",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@tailwindcss/postcss": "^4.1.17",
    "eslint": "^9.39.1",
    "tailwindcss": "^4.1.17",
    "postcss": "^8.5.6",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "tw-animate-css": "^1.4.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.556.0",
    "motion": "^12.23.25",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react-day-picker": "^9.12.0",
    "react-hook-form": "^7.68.0",
    "react-resizable-panels": "^3.0.6",
    "recharts": "^3.5.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vaul": "^1.1.2",
    "zod": "^4.1.13"
  }
}
